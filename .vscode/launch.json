{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI (Launch)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8000"],
      "justMyCode": true
    },
    {
      "name": "Open Browser: Localhost 8000",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Frontend: Debug in Chrome (starts Vite via nvm)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "preLaunchTask": "Frontend: dev server"
    }
  ],
  "compounds": [
    {
      "name": "Backend + Browser",
      "configurations": ["Backend: FastAPI (Launch)", "Open Browser: Localhost 8000"]
    },
    {
      "name": "Backend + Frontend",
      "configurations": ["Backend: FastAPI (Launch)", "Frontend: Debug in Chrome (starts Vite via nvm)"]
    }
  ]
}
