{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI (Launch)",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000"
      ],
      "justMyCode": true
    },
    {
      "name": "Open Browser: Localhost 8000",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    }
    ,
    {
      "name": "Frontend: Vite (npm run dev)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "outputCapture": "std"
    },
    {
      "name": "Open Browser: Frontend",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Backend + Browser",
      "configurations": [
        "Backend: FastAPI (Launch)",
        "Open Browser: Localhost 8000"
      ]
    }
    ,
    {
      "name": "Backend + Vite + Frontend",
      "configurations": [
        "Backend: FastAPI (Launch)",
        "Frontend: Vite (npm run dev)",
        "Open Browser: Frontend"
      ]
    }
  ]
}
